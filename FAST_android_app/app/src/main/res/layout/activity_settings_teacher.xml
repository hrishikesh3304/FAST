<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_shade_1"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/idTVHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="SETTINGS"
        android:textAlignment="center"
        android:textColor="@color/dark_light_blue"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVHeading"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="100"
            android:background="@drawable/button_background_blue"
            android:elevation="10dp"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="Name : "
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="100"
            android:backgroundTint="@color/green"
            android:hint="Your Name"
            android:textColor="@color/green"
            android:textColorHint="@color/grey" />
    </LinearLayout>





    <ImageButton
        android:id="@+id/ClearDataButton"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_background_green"
        android:backgroundTint="#EF0000"
        android:clickable="true"
        android:elevation="20dp"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:src="@drawable/ic_baseline_power_settings_new_24"
        android:stateListAnimator="@null"
        android:textAlignment="center"
        app:tint="@color/white" />

    <!--Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Take Atendance"
        android:textAllCaps="false"
        android:layout_below="@id/idBtoGiveAttendance"
        android:id="@+id/idBtoTakeAttendance"
        android:background="@drawable/button_background_green"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Settings"
        android:textAllCaps="false"
        android:layout_below="@id/idBtoTakeAttendance"
        android:id="@+id/idBtoSettings"
        android:background="@drawable/button_background_green"
        /-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/linearLayoutName"
        android:id="@+id/linearLayoutPRN">

        <TextView
            android:id="@+id/textViewPRN"
            android:layout_width="0dp"
            android:layout_weight="100"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/button_background_blue"
            android:text="PRN : "
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:elevation="10dp"
            android:stateListAnimator="@null"/>

        <EditText
            android:id="@+id/editTextPRN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/green"
            android:hint="Your PRN"
            android:textColorHint="@color/grey"
            android:layout_weight="100"
            android:backgroundTint="@color/green"/>
    </LinearLayout>

</RelativeLayout>